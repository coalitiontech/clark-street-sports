{% assign shop_url = shop.url %}
{% if type == "product" %}
  {% assign product_url = product.url %}
  {% assign share_url = shop_url | append: product_url %}
{% else %}
  {% assign article_url = article.url %}
  {% assign share_url = shop_url | append: article_url %}
{% endif %}

<div class="share-icons">
  <ul>
    <li>
      <a href="https://www.facebook.com/sharer/sharer.php?u={{share_url}}" target="_blank">
        <i class="fa fa-facebook-f" aria-hidden="true"></i>
        Share
      </a>
    </li>
    <li>
      <a href="https://twitter.com/home?status={{share_url}}" target="_blank">
        <i class="fa fa-twitter" aria-hidden="true"></i>
        Tweet
      </a>
    </li>
    <li>
      <a href="//pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&amp;media=http:{{ product | img_url: '1024x1024' | split: '?' | first }}&amp;description={{ product.title | strip_html | truncate: 200, '' | url_param_escape }}{% for tag in product.tags limit: 3 %}{{ tag | replace: ' ', '-' | prepend: ' #' | url_param_escape }}{% endfor %}" data-pin-do="buttonPin" data-pin-config="none" target="_blank">
        <i class="fa fa-pinterest" aria-hidden="true"></i>
        Pin
      </a>
    </li>
  </ul>
</div><!-- /.share-icons -->
